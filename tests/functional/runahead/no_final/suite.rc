# Should shutdown stalled with 4 failed tasks.
[cylc]
    cycle point time zone = Z
    [[events]]
        abort on stalled = True
[scheduling]
    max active cycle points = 4
    initial cycle point = 20100101T00
    [[graph]]
        # oops makes bar spawn as waiting, to hold back the runahead
        PT6H = "foo & oops => bar"
[runtime]
    [[foo]]
        script = false
    [[bar]]
        script = true
